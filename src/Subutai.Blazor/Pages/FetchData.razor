@page "/projectlist"
@inject HttpClient Http
@inject IJSRuntime JS
@using Subutai.Domain.Model
@using Subutai.WebApi;
@using Subutai.Blazor.Data;

<h1>Projects List</h1>

<p>Datas Were fetch from PostgresqlDB.</p>

@if (forecasts == null)
{
    <p><em>Loading...</em></p>
}
else
{

    <table class="table">
        <thead>
            <tr>
                <th>Project ID</th>
                <th>Project Name</th>
                <th>Project Created Time</th>
                <th>Project Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var forecast in forecasts)
            {
                <tr>
                    <td>@forecast.Id</td>
                    <td>@forecast.Name</td>
                    <td>@forecast.CreatedAt</td>
                    <td>@forecast.Description</td>
                    <td><button class="btn btn-danger" @onclick="() => DeleteProject(forecast.Id)">Delete</button></td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<ProjectEntity>? forecasts;

    protected override async Task OnInitializedAsync()
    {
        forecasts = await Http.GetFromJsonAsync<List<ProjectEntity>>("https://localhost:7108/api/action/getprojects");
    }
    private async Task DeleteProject(int id)
    {
         var confirmDelete = await JS.InvokeAsync<bool>("confirm", "Are you sure you want to delete this project?");
        if (confirmDelete)
        {
            var emptyContent = new StringContent("");
            var response = await Http.PostAsync($"https://localhost:7108/api/action/deleteproject/{id}", emptyContent);

            if (response.IsSuccessStatusCode)
            {
                await OnInitializedAsync();
            }
            else
            {
                // Handle error (show a message, for example)
                Console.WriteLine("Error deleting project");
            }

        }

    }
}

